{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { display:flex; flex-direction: column;   
    align-items: center; margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello  âœ…</h1>

 <div class="card text-center">
  <div class="card-header">
    
    <h2 class="card-title">
    <strong>{{data.title}}</strong></h2>
  </div>
  <div class="card-body">
    <p class="card-text">{{data.body}}</p>
    
  </div>
  <div class="card-footer text-muted">
        User : {{data.userId}}
  </div>
</div>


<br><br>
<h3>Comments</h3>
<ul class="list-group m">

{% for comment in comments %}
  <li class="list-group-item"> 
   <div class="card text-center myCard">
  <div class="card-header">
    
    <h4 class="card-title">
    {{comment.name}}</h4>
  </div>
  <div class="card-body">
    <p class="card-text">{{comment.body}}</p>
    
  </div>
  <div class="card-footer text-muted">
        User : {{comment.email}}
  </div>
</div> </li>
 {% endfor %}
</ul>
</div>
{% endblock %}
